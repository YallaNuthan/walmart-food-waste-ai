# train_ai_score_model.py
import pandas as pd
from sklearn.linear_model import LinearRegression
import joblib

# Sample training data
data = pd.DataFrame({
    "waste_donated_kg": [5, 10, 8, 2, 12, 4, 0],
    "waste_reduced_kg": [3, 6, 4, 1, 8, 0, 2],
    "waste_generated_kg": [4, 5, 7, 3, 6, 10, 12],
    "ai_score": [90, 140, 130, 60, 160, 50, 20]  # Simulated targets
})

X = data[["waste_donated_kg", "waste_reduced_kg", "waste_generated_kg"]]
y = data["ai_score"]

model = LinearRegression()
model.fit(X, y)

# Save model
joblib.dump(model, "ai_score_model.pkl")
print("âœ… AI Score model trained and saved.")
